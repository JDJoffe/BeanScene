@model BeanSceneAppV1.ViewModels.TableViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 style="width:max-content; font-size:.4px; margin-top:3%;">Delete</h1>

<h3 style="width:max-content; font-size:.4px; margin-top:3%;">Are you sure you want to delete this?</h3>
<div>
    <h4 style="width:max-content; font-size:.4px; margin-top:2%;">Table</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <th>@Html.DisplayNameFor(m => m.Table.Table_Name)</th>
            <th>@Html.DisplayNameFor(m => m.Table.Area)</th>
            <th>@Html.DisplayNameFor(m => m.Table.Table_Seats)</th>
        </dt>
        <dd class = "col-sm-10">
            <td>@Html.DisplayFor(mi => mi.Table.Table_Name)</td>
            <td>@Html.DisplayFor(mi => mi.Table.Area.Name)</td>
            <td>@Html.DisplayFor(mi => mi.Table.Table_Seats)</td>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Table.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
