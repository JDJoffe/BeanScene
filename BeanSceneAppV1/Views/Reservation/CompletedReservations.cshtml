@using Microsoft.AspNetCore.Identity

@model IEnumerable<BeanSceneAppV1.Models.Reservation>

@{
    ViewData["Title"] = "CompletedReservations";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.TimeSlot.Time)</th>
            <th>@Html.DisplayNameFor(model => model.Sitting)</th>
            <th>@Html.DisplayNameFor(model => model.GuestAmount)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.SeatingRequest)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.TimeSlot.Time)</td>
                <td>@Html.DisplayFor(modelItem => item.Sitting.Sitting_Type)</td>
                <td>@Html.DisplayFor(modelItem => item.GuestAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.SeatingRequest)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
               @* <td><a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a></td>*@
                <td><a class="btn btn-success btn-sm" asp-action="Complete" asp-route-id="@item.Id">Complete</a></td>
            </tr>


        }
    </tbody>
</table>
