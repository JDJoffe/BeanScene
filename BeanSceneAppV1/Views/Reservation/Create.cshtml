@using static BeanSceneAppV1.Models.Reservation
@model BeanSceneAppV1.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Create";
  
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservation.Date" class="control-label"></label>
                <input asp-for="Reservation.Date" class="form-control" />
                <span asp-validation-for="Reservation.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.TimeSlotId" class="control-label"></label>
                @Html.DropDownListFor(model => model.Reservation.TimeSlotId, new SelectList(Model.TimeSlots, "Id", "Time"),
                new {@class="form-control form-selevct"})
            </div>
            <div class="form-group">
                <label asp-for="Reservation.SittingId" class="control-label"></label>
                @Html.DropDownListFor(model => model.Reservation.SittingId, new SelectList(Model.Sittings, "Id", "Sitting_Type"),
                new {@class="form-control form-selevct"})
            </div>
            <div class="form-group">
                <label asp-for="Reservation.GuestAmmount" class="control-label"></label>
                <input asp-for="Reservation.GuestAmmount" class="form-control" />
                <span asp-validation-for="Reservation.GuestAmmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.FirstName" class="control-label"></label>
                <input asp-for="Reservation.FirstName" class="form-control" />
                <span asp-validation-for="Reservation.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.LastName" class="control-label"></label>
                <input asp-for="Reservation.LastName" class="form-control" />
                <span asp-validation-for="Reservation.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Phone" class="control-label"></label>
                <input asp-for="Reservation.Phone" class="form-control" />
                <span asp-validation-for="Reservation.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Email" class="control-label"></label>
                <input asp-for="Reservation.Email" class="form-control" />
                <span asp-validation-for="Reservation.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.SeatingRequest" class="control-label"></label>
                <input asp-for="Reservation.SeatingRequest" oninvalid="allowempty" class="form-control" name="box" />
                <span asp-validation-for="Reservation.SeatingRequest" class="text-danger"></span>          
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Status" class="control-label"></label>
                <select asp-for="Reservation.Status" class="form-control"
                    asp-items="Html.GetEnumSelectList<StatusEnum>()">
                </select>
                <span asp-validation-for="Reservation.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function allowempty()
    {
        var box = document.getElementsByName("box")
        if(box.length == 0)
        {
            box.item.te
        }
    }
</script>